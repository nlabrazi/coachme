<div class="container">
  <div class="title-review">
    <div><%= cl_image_tag @booking.coach.photo.key, height: 218, width: 218, gravity: :face, name: "card-avatar-coach", id: "coach_avatar" %></div>
    <h1>Exprimez-vous! Évaluez <%= @booking.coach.first_name %> </h1>
  </div>
  <div class="content">
    <h3>Note :</h3>
    <div class="star-rating" style="cursor: pointer;">
      <img alt="1" src="https://image.flaticon.com/icons/svg/2324/2324705.svg">
      <img alt="2" src="https://image.flaticon.com/icons/svg/2324/2324705.svg">
      <img alt="3" src="https://image.flaticon.com/icons/svg/2324/2324705.svg">
      <img alt="4" src="https://image.flaticon.com/icons/svg/2324/2324705.svg">
      <img alt="5" src="https://image.flaticon.com/icons/svg/2324/2324705.svg">
      <input name="review[rating]" type="hidden">
    </div>
    <%= simple_form_for [@booking, @review] do |f| %>
    <%= f.input :rating, collection: (1..5).to_a, label: "Notez ce cours" %>
    <%= f.input :content, :as => :text, :input_html => { 'rows' => 6, 'cols' => 10 }, label: "Votre avis", placeholder: "Partagez votre expérience en toute honnêteté..." %>
    <%= f.button :submit,  "Postez votre commentaire", class: 'btn-orange'  %>
    <% end %>
  </div>
</div>
