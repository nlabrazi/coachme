<h3> <%= @coach_activity.activity.name %> </h3>

<p> <%= @coach_activity.activity.category %> </p>
<p> <%= @coach_activity.activity.description %> </p>
<p> <%= @coach_activity.price %> € de l'heure </p>


<h1>Je souhaite booker ce cours</h1>

<div class="container">
  <div class="form-wrapper">
    <h2>Book a course</h2>
    <%= simple_form_for [@coach_activity, @booking] do |f| %>
      <%= f.association  :coach_activity, selected: @coach_activity as: :string, required: false, input_html: {id: "range_start", class: "d-none"} %>
      <%= f.input  :end_date,   as: :string, required: false, input_html: {id: "range_end", class: "d-none"} %>
      <%= f.button :submit, "Book", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>’
<div id="booking-form-div" data-bookings="<%= @bookings_dates.to_json %>" >




